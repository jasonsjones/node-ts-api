{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esNext",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["./src/*.ts"],
    "exclude": ["node_modules", "src/**/*.test.ts"]
}
